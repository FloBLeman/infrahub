---
global:
  scrape_interval: 10s

scrape_configs:
  - job_name: "node-exporter"
    static_configs:
      - targets:
        - "127.0.0.1:9100"

  - job_name: "cadvisor"
    static_configs:
      - targets:
        - "127.0.0.1:9888"

  - job_name: "infrahub"
    static_configs:
      - targets:
        - '127.0.0.1:8000/metrics'
